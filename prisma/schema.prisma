generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// 사용자
model User {
  id                  String        @id @default(cuid())
  email               String        @unique
  nickname            String        @unique
  password            String
  passwordSalt        String
  name                String
  phoneNumber         String        @unique
  authToken           String?
  createdAt           DateTime      @default(now())
  updatedAt           DateTime      @updatedAt
}